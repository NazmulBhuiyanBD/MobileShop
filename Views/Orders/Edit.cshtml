@model MobileShop.Models.Order

@{
    ViewData["Title"] = "Edit Order Status";
}

<h2 class="mb-4">Edit Order Status</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderId" />

            <div class="form-group mb-3">
                <label asp-for="OrderDate" class="form-label"></label>
                <input asp-for="OrderDate" class="form-control" readonly />
            </div>

            <div class="form-group mb-3">
                <label asp-for="CustomerName" class="form-label"></label>
                <input asp-for="CustomerName" class="form-control" readonly />
            </div>

            <div class="form-group mb-3">
                <label asp-for="CustomerPhone" class="form-label"></label>
                <input asp-for="CustomerPhone" class="form-control" readonly />
            </div>

            <div class="form-group mb-3">
                <label asp-for="ShippingAddress" class="form-label"></label>
                <input asp-for="ShippingAddress" class="form-control" readonly />
            </div>

            <div class="form-group mb-3">
                <label asp-for="ProductName" class="form-label"></label>
                <input asp-for="ProductName" class="form-control" readonly />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Price" class="form-label"></label>
                <input asp-for="Price" class="form-control" readonly />
            </div>

            <div class="form-group mb-4">
                <label asp-for="Status" class="form-label"></label>
                <select asp-for="Status" class="form-control">
                    <option value="">-- Select Status --</option>
                    <option value="Pending" selected="@Model.Status == " Pending"">Pending</option>
                    <option value="Shipped" selected="@Model.Status == " Shipped"">Shipped</option>
                    <option value="Received" selected="@Model.Status == " Received"">Received</option>
                    <option value="Cancel" selected="@Model.Status == " Cancel"">Cancel</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">Update Status</button>
            <a asp-action="Index" class="btn btn-outline-secondary ms-2">Back to List</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
