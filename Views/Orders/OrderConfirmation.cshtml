@model MobileShop.Models.Order

@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-success text-white">
            <h2>Order Confirmation</h2>
        </div>
        <div class="card-body">
            <div class="alert alert-success">
                <h4 class="alert-heading">Thank you for your order!</h4>
                <p>Your order #@Model.OrderId has been placed successfully.</p>
                <hr>
                <p class="mb-0">We'll contact you shortly to confirm your order.</p>
            </div>

            <div class="row mt-4">
                <div class="col-md-6">
                    <h5>Order Details</h5>
                    <p><strong>Order Number:</strong> @Model.OrderId</p>
                    <p><strong>Order Date:</strong> @Model.OrderDate.ToString("f")</p>
                    <p><strong>Total Amount:</strong> $@Model.TotalAmount.ToString("N2")</p>
                </div>
                <div class="col-md-6">
                    <h5>Shipping Information</h5>
                    <p><strong>Name:</strong> @Model.CustomerName</p>
                    <p><strong>Phone:</strong> @Model.CustomerPhone</p>
                    <p><strong>Address:</strong> @Model.ShippingAddress</p>
                </div>
            </div>

            <div class="mt-4">
                <h5>Order Items</h5>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderItems)
                        {
                            <tr>
                                <td>@item.ProductName</td>
                                <td>$@item.Price.ToString("N2")</td>
                                <td>@item.Quantity</td>
                                <td>$@((item.Price * item.Quantity).ToString("N2"))</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="text-center mt-4">
                <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Continue Shopping</a>
            </div>
        </div>
    </div>
</div>