@model MobileShop.Models.User

@{
    ViewData["Title"] = "User Profile";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title">My Profile</h3>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-4 text-center">
                            <img src="/assets/images/user.jpg" alt="Profile" class="img-thumbnail" style="max-width: 200px;">
                        </div>
                        <div class="col-md-8">
                            <dl class="row">
                                <dt class="col-sm-4">Name:</dt>
                                <dd class="col-sm-8">@Model.Name</dd>

                                <dt class="col-sm-4">Phone Number:</dt>
                                <dd class="col-sm-8">@Model.PhoneNumber</dd>

                                <dt class="col-sm-4">Address:</dt>
                                <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.Address) ? "Not provided" : Model.Address)</dd>
                            </dl>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="EditProfile" asp-controller="Account" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Edit Profile
                        </a>
                        <a asp-action="Dashboard" asp-controller="Account" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 10px;
        }

        dt {
            font-weight: 500;
        }

        dd {
            margin-bottom: 1rem;
        }
    </style>
}