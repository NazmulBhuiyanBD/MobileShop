@model List<MobileShop.Models.CartItem>

<h3>Your Cart</h3>

@if (!Model.Any())
{
    <p>No items in cart.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Qty</th>
                <th>Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><img src="@item.ProductImage" width="50" /></td>
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>$@item.ProductPrice</td>
                    <td>$@(item.ProductPrice * item.Quantity)</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <form asp-action="ContinueShopping" method="get" class="d-inline">
            <button class="btn btn-secondary">Continue Shopping</button>
        </form>
        <form asp-action="ProceedOrder" method="get" class="d-inline">
            <button class="btn btn-success">Proceed Order</button>
        </form>
    </div>
}
