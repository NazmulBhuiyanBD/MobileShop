@model MobileShop.Models.ProductViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Edit Product</h1>

<hr />
<div class="row">
    <div class="col-md-6 border-2 shadow-lg rounded-2 p-3">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductId" />

            <div class="form-group mb-3">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ProductPrice" class="control-label"></label>
                <input asp-for="ProductPrice" class="form-control" />
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ProductDescription" class="control-label"></label>
                <textarea asp-for="ProductDescription" class="form-control" rows="4"></textarea>
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label>Current Image:</label><br />
                @if (!string.IsNullOrEmpty(Model.ExistingImagePath))
                {
                    <img src="@Model.ExistingImagePath" alt="Product Image" width="150" class="img-thumbnail mb-2" />
                }
                else
                {
                    <p>No image uploaded</p>
                }
            </div>

            <div class="form-group mb-3">
                <label asp-for="ProductImageFile">Upload New Image</label>
                <input asp-for="ProductImageFile" type="file" class="form-control" />
                <span asp-validation-for="ProductImageFile" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-2">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

