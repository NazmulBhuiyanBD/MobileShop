@model MobileShop.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center mt-2">Mobile Details</h1>

<div class="m-2 p-3 shadow-lg border-2 rounded-3">
    <div class="row">
        <div class="col-6 p-2">
            <div class="ProductImage shadow-lg border-2 rounded-3 p-2">
                <img src="@Html.DisplayFor(model => model.ProductImage)" alt="Mobile Image" style="height: 250px; object-fit: cover;" />
            </div>
        </div>
        <div class="col-6 p-2">
            <div class="mt-4">
                <label class="text-dark">Product Name:</label>
                @Html.DisplayFor(model => model.ProductName)
            </div>
            <div class="mt-4">
                <label class="text-dark">Product Price:</label>
                $@Html.DisplayFor(model => model.ProductPrice)
            </div>
            <div class="d-flex mt-4">
                <form asp-action="AddToCart" method="post" class="me-2">
                    <input type="hidden" name="id" value="@Model.ProductId" />
                    <button type="submit" class="btn btn-primary">Add To Cart</button>
                </form>
                <a class="btn btn-secondary" asp-action="Index" asp-controller="Home">Continue Shopping</a>
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-12">
            <h3>Product Description:</h3>
            <div>@Html.DisplayFor(model => model.ProductDescription)</div>
        </div>
    </div>
</div>